---
import { Icon } from "astro-icon/components";

const MEXICO = "MX";

const country = Astro.request.headers.get("X-Vercel-IP-Country") ?? "MX";
console.log(country);

const storeCountry = country === MEXICO ? "mexico" : "spain";
const countryName = country === MEXICO ? "México" : "España";

const { buy } = Astro.props;
const url = buy[storeCountry];
---

<a
  href={url}
  title="Comprar libro"
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center justify-center gap-2 text-balance rounded-lg border border-yellow-500 bg-yellow-400 px-4 py-2 text-center font-bold text-black transition duration-200 ease-in-out hover:scale-105 hover:bg-yellow-500 active:bg-yellow-600"
>
  Comprar en Amazon {countryName}
  <Icon name="amazon" />
</a>
